{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "runtimeVersion": "14",
      "request": "launch",
      "name": "Launch",
      "program": "${workspaceFolder}/lib/cli.js",
      "args": [
        // "all",
        // "-o",
        // "file"
      ],
      "stopOnEntry": false,
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/lib/**/*.js"],
      "preLaunchTask": "npm: compile - dev"
    }
  ]
}
